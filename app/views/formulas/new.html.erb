<div class="col-xs-12 col-sm-10 col-sm-offset-1">
    <div class="text-center">
      <i class="fa fa-edit"></i> new formula for <%= @user.email %>
    </div>
  <div class="panel">
    <div class="panel-body text-center">
  
      <%= form_for Formula.new do |f| %>
        <%= f.number_field :artist_id, value: params[:artist_id], disabled: false, type: 'hidden' %>
        <%= f.number_field :client_id, value: params[:client_id], disabled: false, type: 'hidden'  %>
        
        <div class="form-group row">
          <div class="col-sm-10 col-sm-offset-1 formula-card">
            <%= f.text_field :service_type, class: 'form-control  xs-input', placeholder: 'service type' %>
            <hr>
            <%= f.text_area :formulation, class: 'form-control  xs-input', rows:5, placeholder: 'formulation' %>
          </div>
        </div>
        <div class="form-group">
          <%= submit_tag "save", class: 'btn btn-success' %>
          <%= link_to "cancel", user_path(params[:client_id]), class: 'btn btn-danger', data: {confirm: "return to client profile?" } %>
        </div>
      <% end %>
    </div>
  </div>
</div>