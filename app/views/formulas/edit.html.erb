<div class="col-xs-12 col-sm-10 col-sm-offset-1">
    <div class="text-center">
      <i class="fa fa-edit"></i> edit formula for <%= @user.email %>
    </div>
  <div class="panel">
    <div class="panel-body text-center formula-form">
  
      <%= form_for @formula do |f| %>
          <%= f.number_field :artist_id, disabled: false, type: 'hidden' %>
          <%= f.number_field :client_id, disabled: false, type: 'hidden'  %>
          
          <div class="form-group row">
            <div class="col-sm-10 col-sm-offset-1 formula-card">
             <div class="formula-card-header row">
                 f
             </div>
              <%= f.text_field :service_type, class: 'form-control xs-input', placeholder: 'service type' %>
              <hr>
              <%= f.text_area :formulation, class: 'form-control xs-input', rows:5, placeholder: 'formulation' %>
            </div>
          </div>
          <div class="form-group">
            <%= submit_tag "update", class: 'btn btn-success' %>
            <%= link_to "cancel", :back, class: 'btn btn-danger' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>