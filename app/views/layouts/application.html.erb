<!DOCTYPE html>
<html>
<head>
  <title>Formulus</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="wrapper">
  <div class="container-fluid">
    
    <div class="row">
      <nav class="navbar navbar-toggleable-lg navbar-inverse">
        <div class="navbar-header">
          
          <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target="#theNavbar" aria-expanded="false">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          
          <%= link_to ( current_user ? user_path(current_user) : root_path ), class: 'navbar-brand', title: 'Cerrillo Media' do %>
            Formul.us
          <% end %>
          
        </div>
          <div class="navbar-collapse collapse" id="theNavbar">
            <% if current_user && current_user.artist? %>
              <ul class="nav navbar-nav nav-bar-left">
                <li>
                  <%= link_to 'New Client', "#", class: 'nav-link' %>
                </li>
              </ul>
            <ul class="nav navbar-nav navbar-right">
              <li class="nav-item float-sm-right"><%= link_to "Logged in as: #{current_user.email}", user_path(current_user), class: 'nav-link' %></li>
            <% elsif !current_user %>
            <ul class="nav navbar-nav navbar-right">
              <li class="nav-item float-sm-right"><%= link_to "Login", new_user_session_path, class: 'nav-link' %></li>
              <li class="nav-item float-sm-right"><%= link_to "Sign Up", new_user_registration_path, class: 'nav-link' %></li>
            </ul>
            <% end %>
          </div>    
      </nav>
    </div>

    <!-- Flash Notices & Alerts -->
    <% if flash[:notice] %>
      <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:notice] %>
      </div>
    <% elsif flash[:alert] %>
      <div class="alert alert-warning">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:alert] %>
      </div>
    <% end %>
 
    <div class="row">
      <%= yield %>
    </div>
    
    <div class="footer bg-inverse row text-center">
        
        <%= link_to root_path, class:'col-sm-4 text-left pull-left' do %>
          &copy; Formulus &copy; 2017
        <% end %>
        
        <% if !current_user %>
          <%= link_to new_user_session_path, class: 'col-sm-4 pull-right text-right', title: 'Log-in' do %>
            Sign-in <span class="glyphicon glyphicon-log-in text-default"></span>
          <% end %>
        <% else %>
          <%= link_to destroy_user_session_path, method: :delete, class: 'col-sm-4 pull-right text-right', title: 'Log-out' do %>
            Sign-out <span class="glyphicon glyphicon-log-out text-default"></span>
          <% end %>
        <% end %>
        
    </div>

  </div>
</div>
</body>
</html>
