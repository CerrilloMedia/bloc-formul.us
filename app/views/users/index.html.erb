<% @users.each do |user| %>
    <div class="col-xs-6 col-sm-3">
    <div class="panel panel-default">
            <div class="panel-body">
                <%= user.email %><br>
                <%= link_to user_path(user) do %>
                    profile
                <% end %>
                <div class="">
                    <% if joined_with?(user) %>
                        <%= link_to "Remove", salon_connection_path(user), class: 'btn btn-danger', method: :delete %>
                    <% else %>
                        <%= link_to "Connect", salon_connections_path(salon_user_id: user), class: 'btn btn-default', method: :post %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
<% end %>