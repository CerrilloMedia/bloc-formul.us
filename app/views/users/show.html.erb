 <div class="col-xs-12 col-lg-10 col-lg-offset-1 dashboard">
     <div id="sidebar" class="col-sm-3 hidden-xs">
        <% if current_user.artist? %>
            <div id="history-list" class="panel-body row">
                <%= link_to user_formulas_path(@user) do %>
                     <h4>Formula History</h4>
                 <% end %>
                 <% if @formulas.any? %>
                    <table class="table services-list">
                        <tr>
                            <th class="text-left">salon/artist</th>
                            <th class="t-date text-right">date</th>
                        </tr>
                         <% @formulas.each do |formula| %>
                                    <tr>
                                        <td class="text-left">
                                            <%= link_to formula_path(formula), class: '' do %>
                                                <%= formula.service_type %>
                                            <% end %>
                                        </td>
                                        <td class="t-date text-right"><%= format_datetime(formula.created_at, 'md') %></td>
                                    </tr>
                        <% end %>
                    </table>
                <% end %>
            </div>
         <% end %>
     </div>
     
     <div class="col-xs-12 col-sm-9" id="main-panel">
                <div id="user-header" class="panel-heading">
                    <div id="formula-header" class="">
                        <div class="formula-guest-name">
                            <%= @user.email %>
                        </div>
                        <div class="formula-service-type">
                            <% if @formula %>
                                <span class="hidden-xs">
                                    <%= @formula.service_type %><br>
                                </span>
                            <% else %>
                                       User does not have any formulas yet.
                            <% end %>   
                        </div>
                    </div>
                    
                    <!--User links-->
                    <% if current_user %>
                        <% if @connections.include?(@user.id) %>
                            <div class="panel-body user-links row">
                                <% if @formula %>
                                    <%= link_to formulas_path(copy: @formula.id), method: :create, class: 'btn btn-sm btn-default' do %>
                                        <%= icon('copy') %> <span class="hidden-xs">copy latest formula</span>
                                    <% end %>
                                <% end %>
                                
                                <%= link_to new_formula_path(requested_user: @user), class: 'btn btn-sm btn-default' do %>
                                    <%= icon('pencil-square-o') %> <span class="hidden-xs">create new formula</span>
                                <% end %>
                                
                                <div class='btn-group pull-right'>
                                    <%= link_to user_formulas_path(@user), class: 'btn btn-sm btn-default', title: "User History" do %>
                                        <i class="fa fa-book"></i> <span class="hidden-xs">User</span> History
                                    <% end %>
                                    <%= link_to salon_connection_path(@user.id), class: 'btn btn-sm btn-success', method: :delete, title: "Remove Connection" do %>
                                        <i class="fa fa-user-times"></i>
                                    <% end %>
                                </div>
                            
                            <% else %>
                                <div class='user-links btn-group'>
                                    <%= link_to salon_connections_path(salon_user_id: @user.id), class: 'btn btn-sm btn-success', method: :post, title: "Create Connection" do %>
                                        <i class="fa fa-user-plus"></i> Connect to create a formula
                                    <% end %>
                                </div>
                                
                        <% end %>
                    <% end %>
                    
                 </div>
         <% if @formula %>
             <div class="formula-card-header">
                 f
             </div>
             <div class="panel panel-body formula-card">
                 <div id="formula-service-type" class="visible-xs">
                     <%= @formula.service_type %>
                 </div>
                     <hr class="visible-xs">
                 <div id="formula-formulation" class="">
                     <%= @formula.formulation %>
                 </div>
                 
                <span class="formula-date small text-muted pull-right">created on <%= format_datetime(@formula.created_at,'md') %></span>
             </div>
             <div id="formula-client-note" class="formula-note col-xs-12 well">
                 <div class="note-header">
                     Note header [public/private] & date_created
                 </div>
                 <div class="note-body">
                     Note body
                 </div>
             </div>
             <div id="formula-artist-note" class="formula-note col-xs-12 well">
                 <div class="note-header">
                     Note header [public/private] & date_created
                 </div>
                 <div class="note-body">
                     Note body
                 </div>
             </div>
        <% end %>
     </div>
 </div>